<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <h2>Create a movie</h2>
            <form action="/movies/newMovie" method="POST">
                <label for="title">
                    Title:
                    <input name="title" type="text">
                <label for="genre">
                    Genre:
                    <input name="genre" type="text">
                </label>
                <label for="plot">
                    Plot:
                    <input name="plot" type="text">
                </label>
                <button class="btn btn-dark" type="submit">Create new Movie</button>
            </form>
        </div>
    </div>
</div>
