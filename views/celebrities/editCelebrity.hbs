<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">

            <h2>Edit {{name}}</h2>

            <form action="/celebrities/{{id}}/edit" method="POST">

                <label for="name">
                    Name:
                    <input name="name" type="text" value="{{name}}">
                </label>

                <label for="occupation">
                    Occupation:
                    <input name="occupation" type="text" value="{{occupation}}">
                </label>

                <label for="catchPhrase">
                    Catch Phrase:
                    <input name="catchPhrase" type="text" value="{{catchPhrase}}">
                </label>
                
                <button class="btn btn-dark" type="submit">Edit Celebrity</button>

            </form>
        </div>
    </div>
</div>
